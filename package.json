{
  "name": "npm-build-system",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-cp && npm run build-css && npm run build-js",
    "build-cp": "mkdirp build/ && rsync -a --exclude='css/' --exclude='js/' --exclude='img/' --exclude='fonts/' app/public-root/. build/",
    "build-html": "mkdirp build/ && rsync -a app/html/. build/",

    "build-css": "node-sass --source-map true --include-path app/scss app/scss/include.scss build/css/main.css",
	"watch-css": "nodemon -e scss -x \"npm run build-css\"",

    "build-js": "mkdirp build/js && browserify app/js/**.js > build/js/main.min.js && uglifyjs build/js/main.min.js -c -o build/js/main.min.js --source-map-inline",

    "bs": "browser-sync start --server 'build/' --files 'build/'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faessler/npm-build-system.git"
  },
  "author": "Jan FÃ¤ssler",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/faessler/npm-build-system/issues"
  },
  "homepage": "https://github.com/faessler/npm-build-system#readme",
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "browserify": "^14.3.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "uglify-js": "^2.8.22"
  },
  "dependencies": {
    "jquery": "^3.2.1"
  }
}
